{
  "identifier": "ai.bitte.chat",
  "productName": "Bitte Desktop",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": {
        "default-src": ["'self'", "*"],
        "style-src": ["'self'", "'unsafe-inline'", "*"],
        "script-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'", "*"],
        "img-src": ["'self'", "data:", "*"],
        "connect-src": ["'self'", "*"],
        "frame-src": ["'self'", "*"],
        "popup-src": ["'self'", "blob:", "*"]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Bitte AI Desktop",
        "width": 1400,
        "label": "main",
        "minWidth": 800,
        "minHeight": 600
      },
      {
        "fullscreen": true,
        "resizable": false,
        "title": "Bitte AI Mobile",
        "label": "mobile",
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/bitte-icon-superellipse.png",
      "icons/bitte.ico"
    ],
    "targets": ["app", "dmg", "deb", "msi", "ios", "android"],
    "ios": {
      "developmentTeam": "YOUR_TEAM_ID",
      "entitlements": null,
      "icons": {
        "20pt": "icons/ios/Icon-20@2x.png",
        "29pt": "icons/ios/Icon-29@2x.png",
        "40pt": "icons/ios/Icon-40@2x.png",
        "60pt": "icons/ios/Icon-60@2x.png",
        "76pt": "icons/ios/Icon-76@2x.png",
        "83.5pt": "icons/ios/Icon-83.5@2x.png",
        "1024pt": "icons/ios/Icon-1024.png"
      }
    },
    "android": {
      "package": "ai.bitte.chat",
      "versionCode": 1,
      "icons": {
        "mdpi": "icons/android/mdpi.png",
        "hdpi": "icons/android/hdpi.png",
        "xhdpi": "icons/android/xhdpi.png",
        "xxhdpi": "icons/android/xxhdpi.png",
        "xxxhdpi": "icons/android/xxxhdpi.png"
      }
    }
  }
}